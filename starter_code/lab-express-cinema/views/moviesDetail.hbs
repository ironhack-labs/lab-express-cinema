<div class="movie-detail">
    <div class="movie-image">
        <p>
        <img src="{{movie.image}}" alt="" srcset="">
    </p>
    </div>
    <div class="content">
        <h2>{{header}}</h2>
        <h3>Director: {{movie.director}}</h3>
        <p>
            <strong>Stars:</strong>
            
            <ul>
                {{#each movie.stars}}
                <li>{{this}}</li>

                {{/each}}
            </ul>
        </p>
        <p>
            {{movie.description}}
        </p>
        <p>
            {{#each movie.showtimes}} {{this}} | {{/each}}
        </p>
    </div>

</div>