<section id="movie-section">

<h2>Movies</h2>

<p>Click on the movie to check the showtimes!</p>

<ul>
    {{#each movieArray}}
        <li>
            <img src="{{this.image}}">
            <h3>{{this.title}}</h3>

            <a href="/movie/{{this._id}}">See More</a>
        </li>
    {{else}}
        <!-- with "#each" the "else" only shows if the array is empty -->
        <li>No movie yet...</li>
    {{/each}}
</ul>

</section>