
<section id="movie-detail">
    <div>
        <img src="{{this.image}}">
    </div>
    <div class="info">
        <h2>{{this.title}}</h2>
        <h3>{{this.director}}</h3>
        <h4>Stars:</h4>
        <ul>
            {{#each this.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{this.description}}</p>
        <p>
            {{#each this.showtimes}}
                {{this}} |
            {{/each}}
        </p>
    </div>
    <div>
        <button><a href="/movies">Go back</a></button>
    </div>
</section>