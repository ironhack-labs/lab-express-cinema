<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <img src="{{image}}" alt="">
        </div>
        <div class="col-9">
            <a href="/movies">go back</a>
            <h1>{{title}}</h1>
            <h5>{{director}}</h5>
            <h5>Star</h5>
            <ul>
                {{#each stars}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>
             <div class="time-table">
                {{#each showtimes}}
                    <div>{{this}}</div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
