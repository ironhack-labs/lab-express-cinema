<div class="movie-card">
  <img src={{ this.image }} alt="" class="image">
  <h4 class="title-text-card">{{this.title}}</h4>
  <a href="/movies/{{this._id}}" class="button">See more</a>
  <a href="/movies/{{this._id}}/update" class="button">Update</a>
  <form action="/movies/{{this._id}}/delete" method="post">
    <button class="button">Delete</button>
  </form>
</div>