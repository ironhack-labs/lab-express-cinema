<div class="movie-container">
    <div class="image-container">
        <img src="{{this.image}}">
    </div>
    <div class="data-container">
        <a href="/movies">Go back</a>
        <h3>{{this.title}}</h3>
        <h4>{{this.director}}</h4>
        <b>Stars</b>
        <ul>
            {{#each this.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{this.description}}</p>
        <p>
            {{#each this.showtimes}} {{this}} | {{/each}}
        </p>
    </div>

</div>