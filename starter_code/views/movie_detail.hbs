
   <div id="movieItemContainer">
        
        <img src="{{movie.image}}" alt="{{movie.image}}">
        <div>
            {{!-- <h2>{{movie._id}}</h2> --}}
            <a href="/movies">Go Back!</a>
            <h2>{{movie.title}}</h2>
            <h3>Director: {{movie.director}}</h3>
            <ul>
                <h4>Stars</h4>
                {{#each movie.stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{movie.description}}</p>
            <ul id="showtimes">
                {{#each movie.showtimes}}
                <li>{{this}} | </li>
                {{/each}}
            </ul>
        </div>
    </div>

    