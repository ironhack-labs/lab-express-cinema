<div class="info-movie">
    <div class="poster">
        <img src="{{movie.image}}" alt="{{movie.title}}">
    </div>

    <div>
        <h1>{{movie.title}}</h1>
        <p>
            <h2>Director: {{movie.director}}</h2>
        </p>
        <p>
            <h3>Stars:
                <ul>
                    {{#each movie.stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </h3>
            <p>{{movie.description}}</p>
            <p>
                {{#each movie.showtimes}}
                {{this}} |
                {{/each}}
            </p>
        </p>
    </div>
</div>