<div id="display" class="d-flex align-content-center align-items-start justify-content-center">
    
    <div class="mr-5">
    <img src={{image}}>
    </div>
    <div class="float-right">
    <a href="/movies">Go back</a>
    <p class="mt-3 h1">{{title}}</p>
    <p>{{director}}</p>
    <ul>
    {{#each stars}}
    <li>{{this}}</li>
    {{/each}}
    </ul>
    
    <p>{{description}}</p>
    <p>| 
    {{#each showtimes}}
    {{this}} |
    {{/each}}
    </p>
    </div>
</div>