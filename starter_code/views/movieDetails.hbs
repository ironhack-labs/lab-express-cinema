<div class="oneMovie">
<img src={{theMovie.image}}>
<div class="movie-content">
<a href="/movies">Go back</a>
<h2>{{theMovie.title}}</h2>
<h3>{{theMovie.director}}</h3>
<h4>Stars</h4>
<ul class="allstars">
  {{#each theMovie.stars}}
  <li class="stars">{{this}}</li>
  {{/each}}
</ul>
<p>{{theMovie.description}}</p>
<ul class="showtime">
{{#each theMovie.showtimes}}
<li>{{this}} |</li>
{{/each}}
</ul>
</div>
<iframe width="400" height="315" src={{theMovie.trailer}} frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>