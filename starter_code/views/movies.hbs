<h1 class="display-2 text-center">Ironhack Cinema</h1>
<p class="text-center mb-5">Click on a movie to check the showtimes!</p>

<div class="container-fluid">
  <div class="row justify-content-center">


{{#each movies}}

<div class="card mx-4 my-2 text-center">
  <img src="{{this.image}}" alt="">
  <div class="card-contents">
    <p class="card-text my-1 font-weight-bold">{{this.title}}</p>
    <a href="/movie-details/{{this._id}}">See more</a>
  </div>
</div>

{{/each}}
  </div>
</div>