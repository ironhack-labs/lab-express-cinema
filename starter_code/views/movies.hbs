<div class="container d-flex flex-column align-items-start align-content-start justify-content-start">
    <div class="row mb-3">

        <div class="col-lg-12">
            <h1>Ironhack Cinema</h1>
            <p>Click on the movie to check showtimes!</p>
        </div>
    </div>
    <div class="row">
        {{#each movies}}
        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
            <img src="{{this.image}}">
            <p class="h5">{{this.title}}</p>
            <a class="button mb-4" href="movie/{{this.id}}">See more</a>
        </div>
        {{/each}}

    </div>
</div>



