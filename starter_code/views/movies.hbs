<div class="movies-page">
    <h1>Ironhack Cinema</h1>
    <p>Click on the movie to check the showtimes!</p>
    <div class="movies-list">
        {{#each moviesList}}
            <div class="movie-card">

                <img src="{{image}}" width="200px"><br>
                <h3>{{title}}</h3><br>
                <a href="/movies/{{_id}}">See more</a>
            </div>
        {{/each}}
    </div>
</div>