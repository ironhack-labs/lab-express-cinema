<h2>Ironhack Cinema</h2>

<h4>Click on the movie to check the showtimes!</h4>
<div class="container">
  <div class="row">
    <div>
      <ul class="col">
        {{#each movieArray}}
        <li>
          <img src="{{this.image}}" class="movie-image">
          <h5>{{this.title}}</h5>

          <!-- embed the ID of the movie into the address of its page -->
          <a href="/movies/{{this._id}}">See More</a>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>