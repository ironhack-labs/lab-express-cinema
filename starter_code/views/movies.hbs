<h1>Ironhack Cinema</h1>
<h3>Click on the movie to check the showtimes!</h3>
<hr>

<div class="container">
  <div class="row">

{{#each movies}}
  <div class="movie-div col-md-4">
    <div class="card mb-4">
    <div class="movie-img-div">
      <img class="movie-img" src="{{this.image}}" alt="Movie image">
    </div>
    <div class="card-body">
    <h4>{{this.title}}</h4>
    <a href="/movies/{{this._id}}">See More</a>
    </div>
    </div>
    </div>
{{/each}}
  </div>
</div>