<section>
    <div class="container">
        <h2>Ironhack Cinema</h2>
        <p class="subtitle">Click on the movie to check the showtimes!</p>
        <div class="movies-container">
            {{#each movies}}
                <div class="card">
                    <div class="card-image">
                        <img class="movie-img" src={{this.image}}>
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{this.title}}</span>
                        <a href="/movie/{{this._id}}">See more</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>