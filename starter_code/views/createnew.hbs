<form action="/addmovie" method="POST" class="mt-3" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title" class="text-white">Movie Name:</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Movie Name">
  </div>
  <div class="form-group">
    <label for="description" class="text-white">Movie Name:</label>
    <input type="text" class="form-control" id="description" name="description" placeholder="Movie Description">
  </div>
  <div class="form-group">
      <label for="select-list">Select list (select one):</label>
      <select class="form-control" id="directorId" name="directorId">
        {{#each directors}}
          <option value="{{_id}}">{{fullName}}</option>
        {{/each}}
      </select>
  </div>
  <div class="form-group">
    <label for="url" class="text-white">Movie Image URL (.jpg):</label>
    <input type="file" class="form-control" id="url" name="url" placeholder="Movie Image">
  </div>
  <div class="form-group">
    <label for="stars" class="text-white">Movie Stars:</label>
    <input type="text" class="form-control" id="stars" name="starone" placeholder="Stars">
    <input type="text" class="form-control" id="stars" name="startwo" placeholder="Stars">
    <input type="text" class="form-control" id="stars" name="starthree" placeholder="Stars">
  </div>
  <button type="submit" class="btn btn-primary">Add New</button>
</form>