<form action="/addmovie" method="POST" class="mt-3">
  <div class="form-group">
    <label for="title" class="text-white">Movie Name:</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Movie Name">
  </div>
  <div class="form-group">
    <label for="director" class="text-white">Movie Director:</label>
    <input type="text" class="form-control" id="director" name="director" placeholder="Movie Director">
  </div>
  <div class="form-group">
    <label for="url" class="text-white">Movie Image URL:</label>
    <input type="text" class="form-control" id="url" name="url" placeholder="Movie Image">
  </div>
  <div class="form-group">
    <label for="stars" class="text-white">Movie Stars:</label>
    <input type="text" class="form-control" id="stars" name="starone" placeholder="Stars">
    <input type="text" class="form-control" id="stars" name="startwo" placeholder="Stars">
    <input type="text" class="form-control" id="stars" name="starthree" placeholder="Stars">
  </div>
  <button type="submit" class="btn btn-primary">Add New</button>
</form>