<div class="movie-container">
    <img src="{{movie.image}}">
    <div class="movie-info">
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <h3>Director: {{movie.director}}</h3>
        <h4>Stars</h4>
        {{#each movie.stars}}
        <ul>
            <li>{{this}}</li>
        </ul>
        {{/each}}
        <p>{{movie.description}}</p>
        <p>
        {{#each movie.showtimes}}
        {{this}}
        {{/each}}
        </p>
    </div>
</div>
