<div class="movie-container">
    {{#with movie}}
    <div class="movie-img">
        <img src="{{image}}" alt="">
    </div>
    <div class="movie-data">
        <a href="/movies">Go Back</a>
        <h2>{{title}}</h2>
        <h4>Director: {{director}}</h4>
        <span>Stars</span>
        <ul>
            <li>{{stars.[0]}}</li>
            <li>{{stars.[1]}}</li>
            <li>{{stars.[2]}}</li>
        </ul>
        <p>{{description}}</p>
        <span>{{#each showtimes}}{{this}} | {{/each}}</span>
    </div>
    {{/with}}
</div>