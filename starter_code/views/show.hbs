<div class="col s6 m6 offset-s3 offset-m3">
  <div class="card horizontal grey lighten-5 z-depth-1">
    <div class="card-image col m12 s12">
      <img class="responsive-img"src="{{image}}" alt="{{title}}">
    </div>
    <div class="stacked">
      <div class="card-content">
    <h3>{{title}}</h3><small>Director: {{director}}</small>
    <ul class="collection">
    <h5>Stars</h5>
      {{#each stars as |star|}}
      <li>{{star}}</li>
      {{/each}}
    </ul>
    <blockquote>{{description}}</blockquote>
    <div class="card-action">
      <h6>Show</h6>
    {{#each showtimes as |show|}}
      <a href="#">{{show}}</a>
    {{/each}}
    </div>
    </div>

      </div>
</div>
</div>
