<section class="detail-page">
        <div class="detail-page-image">
                <img src="{{image}}" alt="">
        </div>

        <div class="detail-page-content">
                <a href="/movies">Go back</a>
                <h1>{{title}}</h1>
                <h2>Director: {{director}}</h2>
                <h3>Stars</h3>
                <ul class="stars">
                        {{#each stars}}
                        <li>{{this}}</li>
                        {{/each}}
                </ul>
                <p>{{description}}</p>
                <ul class="showtimes">
                        {{#each showtimes}}
                        <li>{{this}} | </li>
                        {{/each}}
                </ul>
        </div>

</section>