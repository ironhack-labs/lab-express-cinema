<div class="container">
    <div class="row">
        <div class="col-12 col-md-3">
            <img src="{{movie.image}}" alt="{{movie.title}}" class="img-fluid">
        </div>
        <div class="col-12 col-md-9">
            <a href="/movies">Go back</a>
            <h1>{{movie.title}}</h1>
            <h2>Director: {{movie.director}}</h2>
            <div>
                <h3>Stars</h3>
                <ul>
                    {{#each movie.stars}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            <p>{{movie.description}}</p>
            <p>
                {{#each movie.showtimes}}
                    {{this}} |
                {{/each}}
            </p>
        </div>
    </div>
</div>