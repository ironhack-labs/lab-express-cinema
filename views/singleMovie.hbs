<div class="body">
  <div class="movie-card">
    <img class="movie-img" src="{{movie.image}}" alt="{{movie.title}}">
    <div class="movie-info">
      <a href="/movies">Go back</a>
      <h2>{{movie.title}}</h2>
      <h3>Director: {{movie.director}}</h3>
      <b>Stars</b>
      <ul>
        {{#each movie.stars}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <p>{{movie.description}}</p>
      {{#each movie.showtimes}}
        <span class="movie-time">{{this}}</span>
      {{/each}}
    </div>
  </div>
</div>
