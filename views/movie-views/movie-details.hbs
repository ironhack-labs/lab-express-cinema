<div id='movie'>
    {{#with movie}}
    <div>
        <img src='{{image}}' alt='{{title}} cover'>
    </div>
    <div>
        <a href='/movies'>Go back</a>
        <h1>{{title}}</h1>
        <h2>Director: {{director}}</h2>
        <h3>Stars</h3>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>
        <p>
            {{#each showtimes}}
             {{#if @last}}
               {{this}}
             {{else}}
               {{this}} |
             {{/if}}
            {{/each}}
        </p>
    </div>
    {{/with}}
</div>