
<div class=" flex-direction-pdp">	
	<img class="margin-img" src="{{image}}"" alt="{{title}}"" />
	<div class= "pdp-info">
		<h3>{{title}}</h3>
		<h4>Director: {{director}}</h4>
		<h6>Stars:</h6>
		{{#each stars}}
		<ul>
			<li>{{this}}</li>
		</ul>
			{{/each}}
		<p class="desc">{{description}}</p>
		<h5>Showtimes:</h5>
		<div class="p">
			{{#each showtimes}}
				<p>{{this}} </p>
			{{/each}}
		</div>
		<a href="/movies">Back</a>
	</div>
</div>