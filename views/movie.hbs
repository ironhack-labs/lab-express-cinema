<main id="movie">
    <div>
        <div>
            <img src={{this.image}} alt='movie cover' />
        </div>

        <div class="movie">
            <a href='/movies'>Go back</a>

            <h2> {{this.title}} </h2>

            <h3> {{this.director}} </h3>

            <h3> Stars </h3>

            <ul>
                {{#each this.stars}}
                <li> {{this}} </li>
                {{/each}}
            </ul>

            <div>
                <p> {{this.description}} </p>
            </div>

            <p>
                {{#each this.showtimes}}
                <span> {{this}} </span>
                |
                {{/each}}
            </p>
        </div>

    </div>
</main>