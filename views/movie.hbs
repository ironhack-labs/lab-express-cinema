<div id="movie">

<img src="{{movie.image}}" alt="image of {{movie}}">
<article>
<a href="/movies">Back to the list of movies</a>

<h1>{{movie.title}}</h1>

<h2>Director: {{movie.director}}</h2>

<h3>Stars</h3>
<ul>
    {{#each movie.stars}}
    <li>{{this}}</li>
    {{/each}}
</ul>

<p>{{movie.description}}</p>

<p>{{#each movie.showtimes}} {{this}} | {{/each}}</p>
</article>
</div>