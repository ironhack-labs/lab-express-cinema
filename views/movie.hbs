
<div class="card-group mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4 align-self-center">
        <img src="{{this.image}}" class="card-img justify-content-center" alt="moviepicture">
    </div>
    <div class="col-md-8 align-self-center">
      <div class="card-body">
        <h3 class="card-title">{{title}}</h3>
        <h4>Director: {{director}}</h4>
        <h4>Stars</h4>
        <ul>
          {{#each stars as |star|}}
        <li>{{star}}</li>
          {{/each}}
        </ul>
        <p class="card-text">{{description}}</p>
         <p>{{#each showtimes as |showtime|}}
        {{showtime}}|
          {{/each}}</p>
        </ul>

      </div>
    </div>

  </div>
</div>