<div class="container">

    <div class="row">

        {{#with movie}}

        <div class="col-md-3">
            <img src="{{image}}" alt="{{title}}">
        </div>
        <div class="col-md-2">
            <h3>{{title}}</h3>
            <h4>Director: {{director}}</h4>
            <h5>Stars</h5>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            <p>{{description}}</p>

        </div>
        {{/with}}
    </div>

</div>