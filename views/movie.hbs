{{#with movie}}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="{{image}}" alt="{{title}}" class="img-fluid">
        </div>
        <div class="col-md-8">
            <h1>{{title}}</h1>
            <h2>Director: {{director}}</h2>

            <h3>STARS</h3>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            <p>{{description}}</p>
        </div>
    </div>
</div>
{{/with}}