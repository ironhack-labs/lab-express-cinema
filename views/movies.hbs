

<div class="container movie-container">
    <h1>IronHack Cinema</h1>
    <h3>Click on the movie to check the showtimes</h3>

    <div class="row">

        {{#each allMovies}}
                <div class="col col-3 movies-card">
                        <img src="{{image}}" class="card-img-top" alt="...">
                        <h5 class="card-title">{{title}}</h5>
                        <a href="/movie/{{_id}}" class="btn btn-primary">See more</a>
                </div>
        {{/each}}
        <div class="col col-3 go-back-button">
            <a href="/" class="btn btn-outline-primary">Go Back</a>
        </div>

    </div>

</div>



