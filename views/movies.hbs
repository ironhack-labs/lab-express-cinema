<div class="container mx-3">
    <h1 class="text-dark"><a href="/" style="text-decoration: none;">Cinema Ironhack</a></h1>
    <p>Click on the movie to check the showtimes!</p>
</div>
<div class="container">
    <div class="row">
        {{#each movies}}
        <div class="py-1 col-xl-3 col-md-4 col-sm-6 col-12 mb-3 text-center">
            <img src="{{image}}" alt="{{title}}-img">
            <br>
            <p class="mt-2 mb-0"><strong>{{title}}</strong></p>
            <a href="/movies/{{_id}}">See more</a>
        </div>
        {{/each}}
    </div>
</div>