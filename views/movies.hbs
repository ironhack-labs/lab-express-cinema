<div class='movies-wrapper'>
    <h2>Ironhack Cinema</h2>
    <p>Click on the movie to check the showtimes!</p>
    <div class='container'>
        <div class='row'>     
            {{#each this}}
                <div class='col-md-4 text-center movie'>
                    {{#if this.title}}
                    <img src="{{this.image}}" alt="movie image">
                    <p>{{this.title}}</p>
                    <a href="/movies/{{_id}}">See more</a>
                    {{/if}}
                </div> 
            {{/each}}    
        </div>
    </div>
</div>

