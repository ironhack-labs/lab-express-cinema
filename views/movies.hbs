<div class="container">
<h1>{{title}}</h1>
<h3>Click on the movie to check the showtimes!</h3>
    <div class="row">

    {{#each allMovies}}

    <div class="col-md-3 justify-content-center movies">

         <img src="{{this.image}}" class="mx-auto d-block" />
         <h4 class="movie-titles">{{this.title}}</h4>
         <a href="/movies/details/{{id}}" class="link-more">See more</a>

    </div>


    {{/each}}

    </div>

</div> 
