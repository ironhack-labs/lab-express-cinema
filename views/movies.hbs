<div class="container">
  <h1>Ironhack Cinema</h1>
  <div class="row">
    {{#each movies}}
      <div class="col-md-4">
        <div class="card">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}"/>
          <div class="card-body">
            <h5 class="card-title">{{this.tile}}</h5>
            <a class="btn btn-primary" href="/movies/{{this._id}}" role="button">See more</a>
            <a class="btn btn-danger" href="/movies/delete/{{this._id}}" role="button">Delete this movie</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>