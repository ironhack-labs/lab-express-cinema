<div id="moviesBg" class="container-fluid bg-white">
    <div class="container-fluid p-5">
        <h3>Ironhack Cinema</h3>
        <h5>Click on the movie to check the showtimes!</h5>
    </div>
    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-4 g-4 pb-5">
        {{#each movies}}
            <div class="col text-center px-5">
                <div class="card">
                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="./movie/{{_id}}">See more</a>
                </div>
                </div>
            </div>
        {{/each}} 
        </div>
    </div>
</div>