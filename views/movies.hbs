<h1 style="margin-left: 2rem; font-size: 2.5em">Ironhack Cinema</h1>
<p style="margin-left: 2rem;">Click on the movie to check the showtimes!</p>
<a href="/" style="margin-left: 2rem;">Go back</a>
<div class="movies-container">
    {{#each movies}}
    <div class="movies-movie">
        <img src="{{image}}" alt="{{title}}">
        <h3>{{title}}</h3>
        <a href="/movies/{{_id}}">See more</a>
    </div>
    {{/each}}
</div>