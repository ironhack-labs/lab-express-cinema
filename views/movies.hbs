<div class="container">
    <h1>Ironhack Cinema</h1>
    <h4>Click on the movie to see the showtimes</h4>
    <hr>

    <div class="row">

        {{#each movies}}

        <div class="col-md-3">

            <div class="card mt-5 movies-card">
                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/movie/{{_id}}">See more</a>
                </div>
            </div>

        </div>

        {{/each}}

    </div>

</div>