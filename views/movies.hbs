<main>
    <div class='container'>
        <h2>Ironhack Cinema</h2>
        <p>Click on the movie to check the showtimes!</p>
    </div>

    <div class="container">
        <div class="row">
            {{#each movies}}
            <div class="col-md-4">
                <div class="card">
                    <a href='movies/movie/{{this.id}}'>
                    <img class="card-img-top" src={{this.image}} alt='movie cover' />
                        <div class="card-body">
                            <h3 class="card-title">{{this.title}}</h3>
                            <span>See more</span>
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

</main>