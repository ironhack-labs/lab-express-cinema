<!-- views/movies.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movies</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      background-color: #f4f4f4;
      font-family: Arial, sans-serif;
    }

    .movie {
      width: 300px;
      margin: 20px;
      border: 1px solid #ccc;
      background-color: white;
      border-radius: 5px;
      overflow: hidden;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .movie img {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }

    .movie-details {
      padding: 10px;
    }

    .movie-title {
      font-size: 18px;
      margin: 10px 0;
    }

    .see-more {
      display: inline-block;
      background-color: #FF5733;
      color: white;
      padding: 5px 10px;
      border-radius: 5px;
      text-decoration: none;
    }
  </style>
</head>
<body>
  {{!-- 这里是电影列表 --}}
  <div class="movie-list">
    {{#each movies}}
    <div class="movie">
      <img src="{{this.image}}" alt="{{this.title}}">
      <div class="movie-details">
        <h2 class="movie-title">{{this.title}}</h2>
        <a href="/movies/{{this._id}}" class="see-more">See More</a>
      </div>
    </div>
    {{/each}}
  </div>
</body>
</html>
