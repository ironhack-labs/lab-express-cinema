<main>
    <div>
        <h2>Ironhack Cinema</h2>
        <p>Click on the movie to check the showtimes!</p>
    </div>

    <div>
        <div>
            {{#each movies}}
            <div>
                <a href='movies/movie/{{this.id}}'>
                    <div>
                        <img src={{this.image}} alt='movie cover' />
                        <h3>{{this.title}}</h3>
                        <span>See more</span>
                    </div>
                </a>
            </div>
            {{/each}}

        </div>
    </div>

</main>