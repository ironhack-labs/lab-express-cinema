<div class="mx-auto text-center text-light py-5" style="width: 600px;">
    <h1 class="display-4 font-weight-bold">Ironhack Cinema</h1>
    <p class="h3">Click on the movie to check the showtimes!</p>
</div>

 <div class="d-flex justify-content-center flex-wrap mx-5">
    {{#each movies}}
        <div class="shadow border-0 card m-3 text-center" style="width: 13rem;">
            <img src="{{image}}" class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{title}}</h5>
                <a href="/movies/{{id}}" class="btn btn-outline-danger mt-auto">See more</a>
            </div>
        </div>
    {{/each}}
</div>