<div class="conrainer">
    <h1>Ironhack Cinema</h1>
    <h4>Click on the movie to check the showtimes!</h4>
    <hr>
    <div class="container d-flex flex-wrap justify-content-center">
        {{#each allMovies}}
        <div class="card m-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{image}}" class="img-fluid rounded-start" alt="movie image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <a href="/movies/{{_id}}" class="btn btn-dark">See more</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>