<main>
    <div class="container movies-header">
        <h2>Ironhack Cinema</h2>
        <p>Click on the movie to check the showtimes!</p>
    </div>

    <div class="container">
        <div class="row">
            {{#each movies}}
            <div class="col-md-3">
                <div class="card">
                    <a id="movie-title" href="movies/movie/{{id}}">
                    <img class="card-img-top" src={{image}} alt="movie cover" />
                        <div class="card-body">
                            <h3 class="card-title">{{title}}</h3>
                            <span>See more</span>
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

</main>