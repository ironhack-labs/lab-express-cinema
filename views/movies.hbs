<div class="container-fluid d-flex justify-content-center bg-light">
    <div class="row-column">
        <h2 class="text-danger text-center h1 mt-5 display-3 font-weight-bold">Ironhack Cinema</h2>
        <p class="h3 text-center mb-5">Click on the movie to check the showtimes!</p>
    </div>
</div>

<div class="container ">
    <div class="row m-2">
            {{#each movies}}
        <div class="col-sm-4 d-flex justify-content-center my-5 ">
            <div class="row-column">
            <img src="{{image}}" alt="{{title}}">
            <br>
            <p class="text-white pt-4 h6 font-weight-bold">{{title}}</p>
            <a class="btn btn-danger rounded-pill" href="/movie/{{id}}">See more</a>
            </div>
        </div>
            {{/each}}
    </div>
</div>

