<h2>Ironhack Cinema</h2>
<p>Click on the movie to check the showtimes!</p>

{{#each allMovies}}


<div class="row">

  <div class="col-sm-6">

    <div class="card list">

        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}} image">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <a href="/movies/{{this._id}}" class="card-link btn btn-success">See more</a>
        </div>

    </div>

  </div>

</div>

{{/each}}