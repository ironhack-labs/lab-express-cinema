<div class="container py-4">
    <h2>Ironhack Cinema</h2>
    <h5>Click on the movies to check the showtimes!</h5>
    <a href="/">Go Home</a>
</div>
<div class="container mt-4 mb-4">
    <div class="row row-cols-1 row-cols-md-2 gap-4 justify-content-around">
        {{#each movies as |movie|}}
        <div class="card" style="width: 18rem;">
            <img src="{{movie.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{movie.title}}</h5>
                <a href="/movie/{{movie.id}}" class="btn btn-primary">See more</a>
            </div>
        </div>
        {{/each}}   
    </div>
</div>