<div class="container">

    <div class="row">

        {{#each movies}}

        <div class="col-4">

            <div class="card" style="width: 18rem;">

                <img src="{{image}}" class="card-img-top" alt="movie-cover">

                <div class="card-body">

                    <h5 class="card-title"> {{title}} </h5>

                    <a href="/details/{{_id}}" class="btn btn-secondary"> See more </a>

                </div>

            </div>

        </div>

        {{/each}}

    </div>

</div>