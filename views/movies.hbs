<div class="container movies">

    <div class="row justify-content-center">
        {{#each movies}}
        <div class="col-4 mb-5">
            <img src="{{image}}" alt="{{title}}">
            <h2>{{title}}</h2>
            <a href="/details/{{_id}}" class="btn btn-dark">See more</a>
        </div>
        {{/each}}
    </div>

    <a href="/" class="btn btn-dark">Back to Home</a>

</div>