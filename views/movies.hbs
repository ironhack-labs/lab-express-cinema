<div class="container">
    <div class="container text-center mt-5">
        <h1 class="text-primary">Ironhack Cinema</h1>
        <h3>Click on the movie to check the showtimes!</h3>
    </div>

    <div class="row">
        {{#each movi}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/movie/{{_id}}" class="btn btn-primary">See more</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>