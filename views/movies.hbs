<div class="movies-page">
    <div class="movies-title">
        <h1>Ironhack Cinema</h1>
        <p>Click on the movie to check the showtimes!</p>
    </div>
    <div class="movies">
        {{#each movies as |movie|}}
            <div class="movie">
                <img src="{{movie.image}}" alt="image of {{movie.title}}">
                <h3>{{movie.title}}</h3>
                <a href="/movies/{{movie._id}}">See more</a>
            </div>
        {{/each}}
    </div>
</div>