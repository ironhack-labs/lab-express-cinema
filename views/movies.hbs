<div class="movies-intro">
    <h2>Ironhack Cinema</h2>
    <p>Click on the movie to check the showtimes!</p>
</div>

<div class="movies-container">
    {{#each movies}}
        <div class="movie-card">
            <img class="movie-cover" src="{{image}}" alt="{{name}}">
            <p>{{title}}</p>
            <a href="/movie/{{id}}">See more</a>
        </div>
    {{/each}}
</div>