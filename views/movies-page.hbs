<div class="d-flex flex-column align-items-center justify-content-center pb-5">
    <h1 class="text-center pt-5 pb-2 fw-bolder"><strong>Ironhack Cinema</strong></h1>
    <p>Click on the movies to check the Showtimes!</p>
</div>
<div class="container pb-5">
    <div class=" row">
        {{#each movies }}
        <div class="col-lg-4 col-md-6">
            <div class="card px-3 border-0" style="width: 18rem;">
                <img src="{{image}}" class="card-img-top" alt="..." />
                <div class="card-body  d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title"><strong>{{title}}</strong></h5>
                    <a class="btn btn-secondary" role="button" href="/movies/{{id}}">See more</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>