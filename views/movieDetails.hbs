{{!-- <h3>Movie</h3> --}}

<div class="movieDetailsDiv">
   
    <img class="card-img-top" src="{{image}}" alt="img">
    <div>
        <br>
        <a href="/movies">Go back</a>
        <br>
        <h1>{{title}}</h1>
        <br>
        <h4>Director: {{director}} </h4>
        <br>
        <div>
            <h3>Stars</h2>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
        </div>
        <br>
        <p>{{description}}</p>
        <div>
            {{#each showtimes}}
            {{!-- <li></li> --}}
            {{this}}  | 
            {{/each}}
        </div>
    </div>
</div>