

<div class="movieDetails-container">
  
  <img src="{{theMovie.image}}" alt="" style="width: 300px">
  <div class="movieDetails-box">
  <a href="/movies">Go back</a>
  <h2>{{theMovie.title}}</h2>
  <h3>Director: {{theMovie.director}}</h3>
  <h4>Stars</h4>
  <ul>
    {{#each theMovie.stars}}
    <li>{{this}}</li>

    {{/each}}
  </ul>
  <p>{{theMovie.description}}</p>
  
<p class="showTime">
  {{#each theMovie.showtimes}}
  <span>{{this}}</span>
  {{/each}}
   </p>

<div class="update-delete-container">
<a href="/movies/{{theMovie._id}}/edit">Update information</a>
<form action="/movies/delete/{{theMovie._id}}" method="POST">
<button>Delete This Movie</button>
</form>
  </div>

  </div>

  
</div>
