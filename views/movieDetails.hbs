<section id="detailed-movie">

    <div>
        <a href="/movies">Go back</a> <br>
        <img src="{{movie.image}}" alt="">
        </div>
    <div class="text-detailed">
        <p class="title">{{movie.title}}</p>
        <p class="director">Director: {{movie.director}}</p>
        <p class="stars">Stars
        <ul>
            {{#each movie.stars}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
        </p>
        <p>{{movie.description}}</p>
        <div class="showtime">
            {{#each movie.showtimes}}
            <p>{{this}} |</p>
            {{/each}}
        </div>
    </div>
</section>