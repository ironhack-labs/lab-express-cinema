<div class="container">
    <h1> ¡¡Esta es la cartelera del momento!!</h1>

    <div class="row">
        {{#each films}}
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img src="{{image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/peliculas/detalles/{{_id}}" class="btn btn-primary">See more</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>