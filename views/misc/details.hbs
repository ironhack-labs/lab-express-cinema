{{> navbar}}

<div class="container" style="margin-top:30px">
    <div class="d-flex">
        <div class="flex-shrink-0">
            <img style="height: 400px; margin-right: 20px" src="{{movie.image}}" class="img" alt="Movie img">
        </div>
        <div class="flex-grow-1 ms-3">
            
            <figure>
                <blockquote class="blockquote">
                    <h2 class="card-title">{{movie.title}}</h2>
                </blockquote>
                <figcaption class="blockquote">
                        <p><cite title="Source Title">{{movie.director}}</cite></p>
                </figcaption>
            </figure>
            
            
            <h6>Stars acting in this movie:</h6>
            
            <section style="margin-top: 15px" class="d-flex gap-2">
                {{#each movie.stars as |star|}}
                    <span class="shadow-sm rounded-pill bg-secondary p-2">{{star}}</span>
                {{/each}}
            </section>

            <h6 style="margin-top: 25px">Description:</h6>
            <p style="margin-top: 10px">{{movie.description}}</p>

            <h6 style="margin-top: 25px">Movie showtimes:</h6>
            <section style="margin-top: 15px" class="d-flex gap-2"></section>
                {{#each movie.showtimes as |showtime|}}
                    <span class="shadow-sm rounded-pill bg-secondary p-2">{{showtime}}</span>
                {{/each}}
            </section>   

        </div>
    </div>
</div>



