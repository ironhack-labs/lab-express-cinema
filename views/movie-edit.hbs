<h2>Edit Your Movie:</h2>

<form action="/movies/{{_id}}/edit" method="post">
  <label>
    Title:
    <input type="text" name="title" value="{{title}}" />
  </label>

  <label>
    Director:
    <input type="text" name="director" value="{{director}}" />
  </label>

  <label>
    Stars:
    <input type="text" name="stars" value="{{stars}}" />
  </label>

  <label>
    Image:
    <input
      type="url"
      name="image"
      id="url"
      size="30"
      required
      value="{{image}}"
    />
  </label>

  <label>
    Description:
    <textarea name="description" cols="30" rows="4">{{description}}</textarea>

  </label>

  <label>
    Showtimes:
    <input type="string" name="showtimes" value="{{showtimes}}" />
  </label>

  <button type="submit"> Edit </button>
</form>