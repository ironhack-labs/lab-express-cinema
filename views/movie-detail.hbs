<div class="container mt-5">

    <div class="row">
        <div class="col-3">
            <img src="{{image}}" alt="{{title}}">
        </div>
        <div class="col-6">
            <a href="/movies">Go Back</a>
            <h3>{{title}}</h3>
            <h4>Director: {{director}}</h4>
            <h6>Stars</h6>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>

            {{#each showtimes}}
            <span>{{this}} |</span>
            {{/each}}
        </div>
    </div>
</div>