<section id="movie-detail">
    <div>
        <img src="{{movie.image}}">
    </div>
    <div class="info">
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h2>
        <h3>Director: {{this.director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <p>
            {{#each movie.showtimes}}
                <span>{{this}} | </span>
            {{/each}}
        </p>
    </div>
</section>