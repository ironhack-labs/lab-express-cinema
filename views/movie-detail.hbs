<div style="padding: 30px;">
  <div style="float:left; width:30%">
    <img src="{{movie.image}}" height="350px">
  </div>
  <div style="float:right; width:70%; color:white">
    <a href="/movies">Go Back...</a>
    <br>
    <h5>{{movie.title}}</h5>
    <br>
    <h6>Director: {{movie.director}}</h6>
    <br>
    Stars:
    <ul>
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <p style="font-size: 0.8rem">{{movie.description}}</p>
    {{#each movie.showtimes}}
      {{this}}|
    {{/each}}
  </div>
</div>
