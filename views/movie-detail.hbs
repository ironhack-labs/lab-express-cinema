<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-4">
            <img src="{{image}}" alt="{{name}}">
        </div>
        <div class="col-md-4">
            <p><a href="/movies">Go back</a></p>
            <h3>{{title}}</h3>
            <h5>{{director}}</h5>
            <p><b>Stars</b></p>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>

            {{#each showtimes}}
            {{this}} |
            {{/each}}
        </div>
    </div>
</div>