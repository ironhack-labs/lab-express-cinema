<div class="movie-info">

  {{! movie image }}
  <div>
    <img src="{{image}}" alt="movie image" />
  </div>

  {{! movie info }}
  <div id="movie-details">
    <a href="/movies">Go Back</a>

    <h1>{{title}}</h1>

    <h2>Director: {{director}}</h2>

    <h3>Starts</h3>
    <ul>
      {{#each stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <p>{{description}}</p>

    {{#each showtimes}}
        {{this}} |
    {{/each}}
  </div>
</div>