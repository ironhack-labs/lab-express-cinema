<main>

    <article class="d-flex mt-5 pt-5">
        <div>
            <img src="{{this.image}}" alt="">
        </div>
        <div class="d-flex flex-column pl-3">
            <a href="/movies">Go back</a>
            <h4>{{this.title}}</h4>
            <p>Stars</p>
            <ul>
                {{#each this.stars }}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{this.description}}</p>
            <p>
                {{#each showtimes }}
                <span>{{this}} |</span>
                {{/each}}
            </p>
        </div>
    </article>
</main>