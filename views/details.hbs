<div class="main-details">
    <img src="{{ movie.image }}" alt="{{ movie.title }}"> 

    <div>
        <a href="/movies">Go back</a>      
        <p> {{ movie.title }} </p>
        <p>Director: {{ movie.director }}</p>
        <p>Stars</p>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{ movie.description }}</p>
        <div class="showtimes">
        {{#each movie.showtimes}}
            <p> {{this}} | </p>
        {{/each}}
    </div>
    </div>
</div>