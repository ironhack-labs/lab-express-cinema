<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1>Movie Details</h1>
        </div>
    </div>

    <div class="row align-items-center justify-content-center gy-5 gx-5">
            <div class="col-3 col align-self-center text-center">
                <img src="{{movie.image}}" alt="{{movie.title}} image." class="p-3">
            </div>
            <div class="col-9 col align-self-center">
                <h3 class="mb-3">{{movie.title}}</h3>
                <h4>Director: {{movie.director}}</h4>
                <h4>Stars:</h4>
                <ul>
                    {{#each movie.stars as |star|}}
                        <li class="mb-2">{{star}}</li>
                    {{/each}}
                </ul>
                <h4>Description:</h4>
                <p>{{movie.description}}</p>
                <h4>Showtimes:</h4>
                <ul>
                    {{#each movie.showtimes as |show|}}
                        <li class="mb-2">{{show}}</li>
                    {{/each}}
                </ul>
                <a href="/movies" class="btn btn-outline-dark">Back to Movies</a>
            </div>
    </div>
</div>
