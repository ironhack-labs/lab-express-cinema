<div class="container mt-5">

    <div class="row">

        <div class="col-2">
            <img src="{{image}}" alt="{{title}}">
        </div>
        <div class="col-10">
            <h2>{{title}}</h2>
            <h3>Director: {{director}}</h3>
            <h3>Stars:</h3>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>
            <ul>
                {{#each showtimes}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>

    </div>

    <a href="/" class="btn btn-dark">Back to Home</a>

</div>