<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{image}}" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title ">{{title}}</h5>
                <p class="card-text">Director: {{director}}</p>
                <ul>
                    {{#each stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p class="card-text">{{description}}</p>
                {{#each showtime}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    </div>
</div>