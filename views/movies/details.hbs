<div class="container ">
    <div class="row d-flex align-items-center">
        <div class="col-md-3">
            <img src="{{this.image}}" alt="movie poster">
        </div>
        <div class="col-md-8 mt-5">
            <a href="/movies">Go back</a>

            <h1>{{title}}</h1>

            <p><strong>Director:{{director}}</strong></p>
            <p><strong>Stars</strong></p>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each }}
            </ul>
            <p>{{description}}</p>
            <p>{{showtimes}}</p>
        </div>
    </div>
</div>