
<div class="container">
   <h1>Film bucket list</h1>
<hr>

  <div class="row">

    {{#each movies}}
         <div class="card border-0" style="width: 20rem;">
            <img src="{{ image }}" class="card-img-top" alt="...">
            <div class="card-body">
               <h5 class="card-title text-center">{{ title }}
               <br>
               <a href="/movies/{{_id}}" >See more</a>
               </h5>
            </div>
         </div>
         {{/each}}
    <div class="w-100"></div>

   
  </div>
</div>

 