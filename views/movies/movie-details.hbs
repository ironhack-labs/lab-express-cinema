<section
  id="movie-detail"
  class="container d-flex align-items-center justify-content-center"
>
  <div class="row d-flex flex-row movie-detail-wrapper justify-content-center">
    <a href="/movies-list" class="link-back d-block mb-3">Go back</a>
    <div class="col-12 col-md-7 col-lg-5 text-center">
      <img src="{{movie.image}}" alt="" />
    </div>

    <div class="col-12 col-md-5">
      <h1>{{movie.title}}</h1>
      <h2>Director: {{movie.director}}</h2>
      <h3>Stars:</h3>
      <ul>
        {{#each movie.stars}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <div>
        <p class="description">
          {{movie.description}}
        </p>
        <div class="showtimes">
          <p><b>Showtimes:</b></p>
          {{#each movie.showtimes}}
            <span>{{this}} | </span>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>