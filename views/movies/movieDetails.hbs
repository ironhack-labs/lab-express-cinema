<section class="movieDetail-page">
    {{#with movie}}
        <div class="div-img">
            <img src="{{image}}" alt="">
        </div>
        <div class="div-detail">
              <a href="/movies">Go back</a>
            <h1>{{title}}</h1>
            <h3>Director: {{director}}</h2>
            <h4>Stars:</h3>

            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            <p>{{description}}</p>
            <ul class="show-times">
            {{#each showtimes}}
            <li>&nbsp {{this}} &nbsp| </li>
            {{/each}}
            </ul>

        </div>

    {{/with}}
</section>