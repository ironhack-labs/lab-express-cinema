{{#with data}}

<div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
    <div class="row g-0">
        <div class="col-md-4">

            <img src="{{this.image}}" alt="{{this.title}} cover photo">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p><a href="/movies">Go back</a></p>
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.director}}</p>
                <p class="card-text">{{this.stars}}</p>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">{{this.showtimes}}</p>

            </div>
        </div>
    </div>
</div>

{{/with}}