<a href="/movies">Go back</a><br>
<img src="{{image}}" alt="movie-image">
<h2>{{title}}</h2>
<h3>Director: {{director}}</h3>
<h4>Stars: </h4>
<ul>
    {{#each stars}}
        <li>{{this}}</li>
    {{/each}}
</ul>
<p>{{description}}</p>
<p>{{#each showtimes}}
    {{this}} |
    {{/each}}</p>
<a href="/movies/{{id}}/edit">Update movie</a>
<form action="/movies/{{id}}/delete" method="post"><input type="submit" value="Delete"></form>