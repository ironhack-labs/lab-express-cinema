<section class="edit-movie"><h2>Edit the movie: {{movie.title}}</h2>

  <form action="/movies/{{movie._id}}/edit" method="post" class="movie-form">
    <label>
      Title:
      <input type="text" name="title" value="{{movie.title}}" />
    </label>

    <label>
      Director:
      <input type="text" name="director" value="{{movie.director}}" />
    </label>

    <label>
      Stars:
      <textarea name="stars">{{movie.stars}}</textarea>
    </label>

    <label>
      Image:
      <input type="text" name="image" value="{{movie.image}}" />
    </label>

    <label>
      Description:
      <input type="text" name="description" value="{{movie.description}}" />
    </label>

    <label>
      Showtimes:
      <input type="text" name="showtimes" value="{{movie.showtimes}}" />
    </label>

    <button class="button">Save changes</button>
  </form>
</section>