<h2>Edit the movie</h2>

<form action="/movies/edit" method="post">
  <label> Title:
    <input type="text" name="title" value="{{title}}"/>
  </label>

  <label> Director:
    <input type="text" name="director" value="{{director}}" />
  </label>

  <label> Stars:
    <input type="text" name="stars" value="{{stars}}"/>
  </label>

  <label> Description:
    <textarea name="description" cols="30" rows="4">{{description}}</textarea>
  </label>

  <label> Timeschedule:
    <input type="time" value="{{timeschedule}}" name="time"/>
  </label>

  <button type="submit"> Edit </button>
</form>
