<section id="movies-list">
    <div id="list-header">
        <h1>Ironhack Cinema</h1>
        <p>Click on the movie to check the showtimes!</p>
    </div>
    <div id="movies-grid">
        {{#each movies}}
            <div id="movie-box">
                <img src="{{image}}" alt="movie-image">
                <p>{{title}}</p>
                <a href="/movies/{{_id}}">See more</a>
            </div>
        {{/each}}
    </div>
</section>

