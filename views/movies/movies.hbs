<div id="moviesBody">
    <h1>Ironhack Cinema</h1>
    <h3>Click on the movie to check the showtimes!</h3>

    <div class="row ">
        {{#each movies}}
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src={{image}} alt={{title}} />
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="movies/{{_id}}">See more</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>