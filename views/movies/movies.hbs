<div class="container">
  <h1 class="display-1 text-center mb-4 mt-3">Ironhack Cinema</h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
    {{#each movies}}
      <div class="col">
        <div class="card">
          <img src="{{image}}" class="card-img-top" alt="Card Image" />
          <div class="card-body text-center">
            <h5 class="card-title">{{title}}</h5>
            <a href="/movies/{{_id}}" class="btn btn-primary mt-2">See More</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>