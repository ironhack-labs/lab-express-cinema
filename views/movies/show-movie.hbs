<section id="movie-show">
    <img src="{{image}}" alt="image-film">
    <div id="movie-info">
        <a href="/movies">Go back</a>
        <h2>{{title}}</h2>
        <h3>Director: {{director}}</h3>
        <p><b>Stars</b></p>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>  
        <p>
            {{#each showtimes}}
                <span>{{this}} |</span>
            {{/each}}
        </p>
    </div>
</section>