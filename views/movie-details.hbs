<div class="container wrapper" id="movie-details">
    <img src="{{movie.image}}" alt=""> 
    <article>
        <a href="/movies">Go back</a>
        <h3>{{movie.title}}</h3>
        <h4>Director: {{movie.director}}</h4>

        <h5>Stars</h5>
        <ul>
            {{#each movie.stars as |star|}}
            <li>{{star}}</li>
            {{/each}}
        </ul>

        <p>
            {{movie.description}}
        </p>

        <p>
            13:50 | 16:20 | 19:20 | 22:10
        </p>
    </article>
</div>