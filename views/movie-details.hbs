<div class='container'>
  <div class='row'>
    <div class='col-md-4'><img src='{{image}}' alt='movie-image' /></div>
    <div class='col-md-8'>
      <p><a href='/movies'>Go back</a></p>
      <h3>{{title}}</h3>
      <h5>Director: {{director}}</h5>
      <p><b>Stars</b></p>
      <ul>
        {{#each stars}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <p>{{description}}</p>
      <p>
        {{#each showtimes}}
          {{this}}
          |
        {{/each}}
      </p>
    </div>
  </div>
</div>