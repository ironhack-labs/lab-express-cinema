<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body id="details-body">

    <img src="{{image}}" alt="Movie Image" />
    <div id="mov-details">
      <a href="/movies">Go Back</a>
      <h1>{{title}}</h1>
      <h3>Director:{{director}}</h3>
      {{#each stars}}
        <ul>
          <li>{{this}}</li>
        </ul>
      {{/each}}
      <p>{{description}}</p>
      {{#each showtimes}}
        {{this}}
        |
      {{/each}}
    </div>
  </body>
</html>