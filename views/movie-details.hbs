{{!-- {{#if movie}} --}}
<div>
    <img src={{image}}>
</div>
<div>
    <a href="/movies">Go back</a>
    <h1>{{title}}</h1>
    <h2>Director: {{director}}</h2>
    <p>Stars</p>
    <ul>
        {{#each stars}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <p>{{description}}</p>
    <p>{{#each showtimes}} {{this}} |{{/each}}</p>
</div>
{{!-- {{/if}} --}}