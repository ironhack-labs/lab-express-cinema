<div class="container">

    <h1 class="details-titulo">Detalles de {{title}}</h1>

    <hr>
    <div class="details">
        <div class="details-img">

            <img src="{{image}}" alt="">
        </div>
        <div class="details-info">

            <p>Sinopsis: {{description}}</p>
            <p>Starring: </p>
            <ul>
                {{#each stars}}
                <li>
                    <p>{{this}}</p>
                </li>
                {{/each}}
            </ul>
            <p>Showtimes: {{showtimes}} </p>
        </div>
    </div>
</div>

<hr>
<div class="boton2">

    <a href="/movies" class="btn btn-dark">Volver al listado</a>
</div>