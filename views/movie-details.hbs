<div class="card mb-3" style="max-width: fit-content;">

  <div class="row no-gutters">

    <div class="col-md-4">
      <img src="{{image}}" class="card-img" alt="{{title}}">
    </div>

    <div class="col-md-8">

      <div class="card-body">
          <a href="/movies/list">Go back</a>
          <h2 class="card-title">{{title}}</h2>
          <h3>Director: {{director}}</h3>
          <ul>
              {{#each stars}}
                <li>{{this}}</li>
              {{/each}}
          </ul>
          <p class="card-text">{{description}}</p>
          <p>{{showtimes}}</p>
      </div>

    </div>

  </div>

</div>