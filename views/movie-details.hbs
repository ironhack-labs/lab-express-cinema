

 <div class="container">

    <div class="row">

    

    <div class="col-md-3">

         <img src="{{image}}" alt="{{title}}" class="img-details"/>

    </div>

    <div class="col-md-9">

        <a href="/movies">Go Back</a>

        <h3 class="bold">{{title}}</h3>

        <h4 class="bold">Director: {{director}}</h4>

        <h5 class="bold">Stars</h5>

        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>
        <p>{{#each showtimes}}
              {{this}} {{#unless @last}} |{{/unless}}
            {{/each}}</p>
           

    </div>

    

    </div>

</div>  