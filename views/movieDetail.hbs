<div class="movie-detail">
    <img src="{{image}}" alt="{{title}}">
    <div>
        <div>
            <a href="/movies">Go back</a>
        </div>
        <h1>{{title}}</h1>
        <h2>{{director}}</h2>
        <h3>Stars</h3>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <div class="description">
            {{description}}
        </div>
        <div>
            {{#each showtimes}}
            <span>{{this}} | </span>
            {{/each}}
        </div>
    </div>
</div>