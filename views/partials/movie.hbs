<div class="container mt-5 pl-2">
    <div class="row">
        <div class="col">
            <img style="width: 350px;" src="{{image}}" alt="">
        </div>
        <div class="col text-light">
            <h1 class="card-title py-3">{{title}}</h1>
            <h2 class="card-subtitle mb-2 py-1">Director: {{director}}</h2>
            <h3 class="card-subtitle mb-1 py-3">Stars:</h3>
            <div class="container">
                {{#each stars as |star|}}
                <li class="ml-3 py-1">{{star}}</li>
                {{/each}}
            </div>
            <p class="card-text mt-2 pt-3">{{description}}</p>
            <span id="__showtime">{{#each showtimes as |showtime|}}
               <span>{{showtime}} |</span>
                {{/each}}</span>
        </div>
    </div>
</div>